# Tracklistify Configuration Example
# Copy this file to .env and modify as needed

# Provider Settings
PRIMARY_PROVIDER=shazam
PROVIDER_FALLBACK_ENABLED=false
PROVIDER_FALLBACK_ORDER=acrcloud

# ACRCloud Configuration
ACR_ACCESS_KEY=your_access_key_here
ACR_ACCESS_SECRET=your_access_secret_here
ACR_HOST=identify-eu-west-1.acrcloud.com
ACR_TIMEOUT=10

# Shazam Configuration
SHAZAM_ENABLED=true
SHAZAM_TIMEOUT=10

# Spotify Provider Settings
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_TIMEOUT=10

# Provider Retry Settings
PROVIDER_RETRY_STRATEGY=exponential
PROVIDER_MAX_RETRIES=3
PROVIDER_RETRY_DELAY=1.0
PROVIDER_MAX_RETRY_DELAY=30.0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
MAX_CONCURRENT_REQUESTS=5

# Cache Settings
CACHE_ENABLED=true                      # Enable caching of processed audio segments
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_DIR=~/.tracklistify/cache         # Directory for caching processed audio segments
CACHE_BASE_DIR=~/.tracklistify/cache
CACHE_TEMP_DIR=~/.tracklistify/cache/temp
CACHE_STORAGE_FORMAT=json
CACHE_COMPRESSION_ENABLED=true
CACHE_COMPRESSION_LEVEL=6
CACHE_CLEANUP_ENABLED=true
CACHE_CLEANUP_INTERVAL=3600
CACHE_MAX_AGE=86400
CACHE_MIN_FREE_SPACE=104857600          # 100MB in bytes

# Recognition Settings
CONFIDENCE_THRESHOLD=0.8                # Confidence threshold for track detection (0.0 to 1.0)
SEGMENT_LENGTH=30                       # Length of audio segments in seconds (1 to 60)
OVERLAP=5                               # Overlap between segments in seconds (0 to 30)

RECOGNITION_CONFIDENCE_THRESHOLD=0.7    # Global confidence threshold
RECOGNITION_SEGMENT_LENGTH=10.0         # Length of each analysis segment
RECOGNITION_OVERLAP=2.0                 # Overlap between segments
RECOGNITION_NOISE_REDUCTION=true        # Apply noise reduction
RECOGNITION_MIN_DURATION=5.0            # Minimum duration for recognition
RECOGNITION_MAX_DURATION=300.0          # Maximum duration to process
RECOGNITION_MIN_SEGMENT_CONFIDENCE=0.5  # Minimum confidence per segment
RECOGNITION_MAX_SEGMENTS=50             # Maximum segments to process
RECOGNITION_SILENCE_THRESHOLD=-50.0     # Silence detection threshold (dB)

# Track Identification Settings
SEGMENT_LENGTH=60
MIN_CONFIDENCE=0.8
TIME_THRESHOLD=60
MAX_DUPLICATES=2
OVERLAP_DURATION=10
OVERLAP_STRATEGY=weighted
MIN_SEGMENT_DURATION=10

# Output Settings
OUTPUT_DIR=~/.tracklistify/output       # Directory for output files
OUTPUT_DIRECTORY=output
OUTPUT_FORMAT=json

# Download Settings
DOWNLOAD_QUALITY=192
DOWNLOAD_FORMAT=mp3
DOWNLOAD_TEMP_DIR=~/.tracklistify/temp
DOWNLOAD_MAX_RETRIES=3

# Application Settings
VERBOSE=false
DEBUG=false
MAX_REQUESTS_PER_MINUTE=60