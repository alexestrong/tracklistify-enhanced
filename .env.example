# Provider Selection
PRIMARY_PROVIDER=shazam
PROVIDER_FALLBACK_ENABLED=false
PROVIDER_FALLBACK_ORDER=acrcloud

# ACRCloud Configuration
ACR_ACCESS_KEY=your_access_key_here
ACR_ACCESS_SECRET=your_access_secret_here
ACR_HOST=identify-eu-west-1.acrcloud.com
ACR_TIMEOUT=10

# Shazam Configuration
SHAZAM_ENABLED=true
SHAZAM_TIMEOUT=10

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_TIMEOUT=10

# Recognition Settings
RECOGNITION_CONFIDENCE_THRESHOLD=0.7  # Global confidence threshold
RECOGNITION_SEGMENT_LENGTH=10.0       # Length of each analysis segment
RECOGNITION_OVERLAP=2.0               # Overlap between segments
RECOGNITION_NOISE_REDUCTION=true      # Apply noise reduction
RECOGNITION_MIN_DURATION=5.0          # Minimum duration for recognition
RECOGNITION_MAX_DURATION=300.0        # Maximum duration to process
RECOGNITION_MIN_SEGMENT_CONFIDENCE=0.5 # Minimum confidence per segment
RECOGNITION_MAX_SEGMENTS=50           # Maximum segments to process
RECOGNITION_SILENCE_THRESHOLD=-50.0   # Silence detection threshold (dB)

# Track Identification Settings
SEGMENT_LENGTH=60
MIN_CONFIDENCE=0.0
TIME_THRESHOLD=60
MAX_DUPLICATES=2
OVERLAP_DURATION=10
OVERLAP_STRATEGY=weighted
MIN_SEGMENT_DURATION=10

# Output Settings
OUTPUT_FORMAT=json
OUTPUT_DIRECTORY=output

# Application Settings
VERBOSE=false
DEBUG=false
MAX_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Download Settings
DOWNLOAD_QUALITY=320  # Audio quality in kbps
DOWNLOAD_FORMAT=mp3   # Output format
DOWNLOAD_TEMP_DIR=/custom/temp/dir  # Custom temp directory
DOWNLOAD_MAX_RETRIES=5  # Maximum retry attempts

# Provider Retry Settings
PROVIDER_MAX_RETRIES=3       # Maximum retries for provider requests
PROVIDER_RETRY_DELAY=1.0     # Base delay between retries